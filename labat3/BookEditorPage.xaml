<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="labat3.Views.BookEditorPage"
             Title="Редагування книги">

    <StackLayout Padding="20">
        <Label Text="Редагування книги" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,20"/>
        <Entry Placeholder="Назва книги" Text="{Binding Title}" />
        <Entry Placeholder="Автор" Text="{Binding Author}" />
        <Entry Placeholder="Рік" Keyboard="Numeric" Text="{Binding Year}" />
        <Entry Placeholder="Жанр" Text="{Binding Genre}" />
        <Button Text="Зберегти" Clicked="OnSaveClicked" Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>
